<% if (site.tags.length){ %>
<div id="widget-tag" class="widget">
  <div class="list-group">
    <h4 class="list-group-item active"><%= __('tags') %></h4>
    <% site.tags.sort('name').each(function(item){ %>
    <a href="<%- url_for(item.path) %>" class="list-group-item"><%= item.name %><span class="badge"><%= item.posts.length %></span></a>
    <% }); %>
  </div>
</div>
<% } %>
