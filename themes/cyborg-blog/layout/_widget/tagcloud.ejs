<% if (site.tags.length){ %>
<div id="widget-tagcloud" class="widget">
  <div class="list-group">
    <h4 class="list-group-item active"><%= __('tagcloud') %></h4>
      <div class="panel panel-default">
        <div class="panel-body">
          <%- tagcloud(site.tags, {}) %>
        </div>
      </div>
  </div>
</div>
<% } %>
