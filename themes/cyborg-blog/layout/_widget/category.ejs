<% if (site.categories.length){ %>
<div id="widget-category" class="widget">
  <div class="list-group">
    <h4 class="list-group-item active"><%= __('categories') %></h4>
    <% site.categories.sort('name').each(function(item){ %>
    <a href="<%- url_for(item.path) %>" class="list-group-item"><%= item.name %><span class="badge"><%= item.posts.length %></span></a>
    <% }); %>
  </div>
</div>
<% } %>
