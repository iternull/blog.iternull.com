<% if (site.posts.length){ %>
<div id="widget-blogroll" class="widget">
  <div class="list-group">
    <h4 class="list-group-item active"><%= __('blogroll') %></h4>
    <% for (var i in (config.blogroll || theme.blogroll)){ %>
    <a class="list-group-item" href="<%- theme.blogroll[i] %>" target="_blank"><%= i %></a>
    <% } %>
  </div>
</div>
<% } %>
