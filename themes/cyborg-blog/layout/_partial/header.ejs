<header class="header">
<!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/" title="<%= config.subtitle %>"><%= config.author %></a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <% for (var i in theme.menu){ %>
        <li class=""><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
        <% } %>
        <% if (theme.dropdown){ %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop <span class="caret"></span></a>
          <ul class="dropdown-menu">
          <% for (var i in theme.dropdown){ %>
            <li><a target="_blank" href="<%- url_for(theme.dropdown[i]) %>"><%= i %></a></li>
          <% } %>
          </ul>
        </li>
        <% } %>
      </ul>
      <%- partial('_widget/search') %>
    </div>
  </div>
</nav>

<div class="jumbotron">
  <div class="container">
    <div class="blog-header">
      <h1 class="blog-title"><%= config.title %></h1>
      <% if (theme.subtitle){ %>
      <p class="lead blog-description"><%= theme.subtitle %></p>
      <% } %>
    </div>
  </div>
</div>
</header>
